# ====================================
# SERVER CONFIGURATION
# ====================================
PORT=5000
NODE_ENV=development
# For production, set to: production

# ====================================
# FRONTEND URL (for CORS)
# ====================================
FRONTEND_URL=http://localhost:5173
# For AWS production: https://your-cloudfront-url.cloudfront.net
# For Vercel: https://your-app.vercel.app

# ====================================
# DATABASE CONFIGURATION
# ====================================
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# ====================================
# JWT SECRETS
# ====================================
JWT_SECRET=your_super_secret_jwt_key_min_32_characters
JWT_EXPIRES=7d
ADMIN_JWT_SECRET=your_admin_super_secret_key_min_32_characters

# ====================================
# ADMIN CREDENTIALS
# ====================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password

# ====================================
# AWS S3 CONFIGURATION (for file uploads)
# ====================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-s3-bucket-name

# ====================================
# AI/ML SERVICES
# ====================================
GEMINI_API_KEY=your_gemini_api_key

# ====================================
# EMAIL CONFIGURATION (Gmail SMTP)
# ====================================
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# ====================================
# OPTIONAL: For older Node versions
# ====================================
# NODE_OPTIONS=--openssl-legacy-provider

# ====================================
# VERCEL DEPLOYMENT (auto-set by Vercel)
# ====================================
# VERCEL=1
# VERCEL_URL=your-app.vercel.app
